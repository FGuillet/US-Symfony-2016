{% extends "::manage.html.twig" %}

{% block title %}Ressources - {% endblock %}

{% block body %}
  <section class="container">
    <h1>Centre de ressources</h1>
    <div class="row">
      <div class="col-xs-12 navbar navbar-default">
        <span class="glyphicon glyphicon-plus"></span><a href="{{ path('us_image_add') }}">Ajouter une image</a>
      </div>
    </div>
    <div class="row">
      {% if images is not null %}
        {% for image in images %}
          <div class="actionImage col-sm-3 col-xs-12">
            <div class="containerImage">
              <img src="{{ (asset(image.webPath)) | imagine_filter('imageFilter') }}" alt="{{ image.alt }}" />
            </div>
            <div class="btn-group">
              <a href="{{ path('image_view', {'id': image.id}) }}" class="btn btn-default" ><span class="glyphicon glyphicon-eye-open"></span></a>
              <a href="{{ path('image_edit', {'id': image.id}) }}" class="btn btn-default" ><span class="glyphicon glyphicon-pencil"></span></a>
              <a href="{{ path('image_delete', {'id': image.id}) }}" class="btn btn-default" ><span class="glyphicon glyphicon-remove"></span></a>
            </div>
          </div>
        {% endfor %}
      {% else %}
        <p>Aucune image enregistr√©e sur le site</p>
      {% endif %}


    </div>
  </section>

{% endblock %}
