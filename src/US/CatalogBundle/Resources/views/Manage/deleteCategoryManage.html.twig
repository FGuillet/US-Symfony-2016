{% extends "::manage.html.twig" %}

{% block title %}Supprimer une catégorie - {% endblock %}

{% block body %}
<section class="container">
  <h2>Supprimer une catégorie</h2>
  <p>
  Etes-vous certain de vouloir supprimer la catégorie "{{ category.name }}" ?
  </p>

  <form action="{{ path('delete_category', {'id': category.id}) }}" method="post">
    <a href="{{ path('category_index_manage') }}" class="btn">
      Retour aux catégories
    </a>
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {{ form_rest(form) }}
  </form>
</section>


{% endblock %}
