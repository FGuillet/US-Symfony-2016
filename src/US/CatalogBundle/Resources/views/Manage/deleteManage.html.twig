{% extends "::manage.html.twig" %}

{% block title %}Supprimer un produit - {% endblock %}

{% block body %}
<section class="container">
  <h2>Supprimer un produit</h2>
  <p>
  Etes-vous certain de vouloir supprimer le produit "{{ product.name }}" ?
  </p>
  {# On met l'id de l'article dans la route de l'action du formulaire #}
  <form action="{{ path('delete_product', {'id': product.id}) }}" method="post">
    <a href="{{ path('product_index_manage') }}" class="btn">
      Retour aux produits
    </a>
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {{ form_rest(form) }}
  </form>
</section>


{% endblock %}
