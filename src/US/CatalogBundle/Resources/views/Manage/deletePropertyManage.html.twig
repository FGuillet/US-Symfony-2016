{% extends "::manage.html.twig" %}

{% block title %}Supprimer une propriété - {% endblock %}

{% block body %}
<section class="container">
  <h2>Supprimer une propriété</h2>
  <p>
  Etes-vous certain de vouloir supprimer la propriété "{{ property.name }}" ?
  </p>

  <form action="{{ path('delete_property', {'id': property.id}) }}" method="post">
    <a href="{{ path('property_index_manage') }}" class="btn">
      Retour aux catégories
    </a>
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {{ form_rest(form) }}
  </form>
</section>


{% endblock %}
