{% extends "::manage.html.twig" %}

{% block title %}Produits - {% endblock %}

{% block body %}
  <section class="container">
    <div class="col-xs-12 navbar navbar-default">
      <span class="glyphicon glyphicon-plus"></span><a href="{{ path('product_add') }}">Ajouter un produit</a>
    </div>
    <div class="row">
      {% if products is not null %}
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Nom du produit</th>
              <th>Cat√©gorie du produit</th>
              <th>Actions</th>
            <tr>
          </thead>
          <tbody>
          {% for product in products %}
            <tr>
              <td>{{ product.name }}</td>
              <td>{{ product.category.name }}</td>
              <td class="btn-group">
                <a href="{{ path('product_view_manage', {'id': product.id}) }}" class="btn btn-default" ><span class="glyphicon glyphicon-eye-open"></span></a>
                <a href="{{ path('edit_product', {'id': product.id}) }}" class="btn btn-default" ><span class="glyphicon glyphicon-pencil"></span></a>
                <a href="{{ path('delete_product', {'id': product.id}) }}" class="btn btn-default" ><span class="glyphicon glyphicon-remove"></span></a>
              </td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      {% else %}
        <p>Aucun produit dans votre catalogue</p>
      {% endif %}
    </div>
  </section>
{% endblock %}
