{% extends "::base.html.twig" %}

{% block title %}Catalogue - {% endblock %}

{% block body %}
  <section id="wrapper" class="container">
    <h1 class="titreRouge">Catalogue</h1>

    {% if categories is not null %}
      <div class="row catalogue4 cat">
        {% for category in categories %}
          <div class="col-sm-3 col-xs-12">
            <a href="{{ path('view_products_category', {'slug': category.slug}) }}">
              <div class="typePerruque">
                    <p>{{ category.name }}</p>
              </div>
              {% if category.image is not null %}
                <div class="imgPcourt">
                  <img src="{{(asset(category.image.webPath)) | imagine_filter('productCatalogFilter') }}" alt="{{ category.image.alt }}" />
                </div>
              {% endif %}
            </a>
          </div>
        {% endfor %}
      </div>
    {% endif %}

  </section>
{% endblock %}
