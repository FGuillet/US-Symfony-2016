{% extends "::base.html.twig" %}

{% block title %}{% if news is not null %}{{ news.title }} - {% endif %}{% endblock %}

{% block body %}
<section class="container">
  {% if news is not null %}
    <h1 class="titreRouge">{{ news.title }}</h1>
    <div class="row contentNews">
      <div class="col-sm-4">
        <img src="{{ (asset(news.image.webPath)) | imagine_filter('productCatalogFilter') }}" alt="{{ news.image.alt }}" />
      </div>
      <div class="col-sm-8">
        {{ news.content }}
      </div>
    </div>
  {% endif %}
</section>
{% endblock %}
